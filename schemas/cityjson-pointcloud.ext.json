{
  "type": "CityJSONExtension",
  "name": "pointcloud",
  "uri": "https://raw.githubusercontent.com/GANys/cityjson-pointcloud/dev/schemas/cityjson-pointcloud.ext.json",
  "version": "0.2",
  "versionCityJSON": "1.1",
  "description": "Extension to support point cloud for CityObjects geometries. Works with CityJSON 1.1.0",
  "extraAttributes": {
    "_AbstractCityObject": {
      "+pointcloud-file": {
        "type": "object",
        "properties": {
          "mimeType": {
            "type": "string",
            "enum": ["application/vnd.las", "application/octet-stream"]
          },
          "pointFile": {
            "type": "string",
            "format": "uri-reference"
          },
          "referenceSystem": {
            "type": "string",
            "pattern": "^(http|https)://www.opengis.net/def/crs/"
          }
        }
      }
    },
    "_AbstractBuilding": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "_AbstractTunnel": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "_AbstractBridge": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "_AbstractTransportationComplex": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "TINRelief": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "WaterBody": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "PlantCover": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    },
    "LandUse": {
      "+geometry": {
        "type": "array",
        "items": {
          "oneOf": [{ "$ref": "geomprimitives.schema.json#/MultiPoint" }]
        }
      }
    }
  },
  "extraRootProperties": {},
  "extraCityObjects": {}
}
